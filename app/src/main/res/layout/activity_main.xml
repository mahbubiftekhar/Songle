<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="8dp"
    tools:layout_editor_absoluteX="8dp"
    android:background="#2072A4"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:layout_marginBottom="10dp"
        android:background="#2072A4">

        <TextView android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:textColor="#f5f5f5"
            android:text="Welcome to Songle!"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textAlignment="center"
            />

        <Button android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/LEVEL1"
            android:id="@+id/LEVEL1_BUTTON"
            android:padding="10dp"/>
        <Button android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/LEVEL2"
            android:id="@+id/LEVEL2_BUTTON"
            android:padding="10dp"/>
        <Button android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/LEVEL3"
            android:id="@+id/LEVEL3_BUTTON"
            android:padding="10dp"/>
        <Button android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/LEVEL4"
            android:id="@+id/LEVEL4_BUTTON"
            android:padding="10dp"/>
        <Button android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/LEVEL5"
            android:id="@+id/LEVEL5BUTTON"
            android:padding="10dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" />
        <Button android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/MUSIC"
            android:id="@+id/MUSICBUTTON"
            android:padding="10dp"/>
        <Button android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/SONYLYRICS"
            android:id="@+id/SONGLYRICS"
            android:padding="10dp"/>

        <Button android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/EXPLAINGAME"
            android:id="@+id/HOWTOPLAY"
            android:padding="10dp"/>

    </LinearLayout>
</ScrollView>

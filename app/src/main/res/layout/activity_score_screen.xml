<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="8dp"
    tools:layout_editor_absoluteX="8dp"
    android:background="#2072A4"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:background="#2072A4">

        <TextView
            android:id="@+id/topButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/score_overview"
            android:textColor="#FF0000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/total_score"
            android:textColor="#FF0000"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/Score"
            android:layout_width="fill_parent"
            android:textAlignment="center"
            android:layout_height="fill_parent"
            android:textColor="#0000FF"
            android:textSize="25sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="fill_parent"
            android:textAlignment="center"
            android:layout_height="fill_parent"
            android:text="@string/LEVEL1"
            android:textColor="#FF0000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/LEVEL1_SCORE"
            android:layout_width="fill_parent"
            android:textAlignment="center"
            android:layout_height="fill_parent"
            android:textColor="#0000FF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/LEVEL1_TIME"
            android:layout_width="fill_parent"
            android:textAlignment="center"
            android:layout_height="fill_parent"
            android:textColor="#0000FF"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="fill_parent"
            android:textAlignment="center"
            android:layout_height="fill_parent"
            android:text="@string/LEVEL2"
            android:textColor="#FF0000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/LEVEL2_SCORE"
            android:layout_width="fill_parent"
            android:textAlignment="center"
            android:layout_height="fill_parent"
            android:textColor="#0000FF"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/LEVEL2_TIME"
            android:layout_width="fill_parent"
            android:textAlignment="center"
            android:layout_height="fill_parent"
            android:textColor="#0000FF"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="fill_parent"
            android:textAlignment="center"
            android:layout_height="fill_parent"
            android:text="@string/LEVEL3"
            android:textColor="#FF0000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/LEVEL3_SCORE"
            android:layout_width="fill_parent"
            android:textAlignment="center"
            android:layout_height="fill_parent"
            android:textColor="#0000FF"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/LEVEL3_TIME"
            android:layout_width="fill_parent"
            android:textAlignment="center"
            android:layout_height="fill_parent"
            android:textColor="#0000FF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="fill_parent"
            android:textAlignment="center"
            android:layout_height="fill_parent"
            android:text="@string/LEVEL4"
            android:textColor="#FF0000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/LEVEL4_SCORE"
            android:layout_width="fill_parent"
            android:textAlignment="center"
            android:layout_height="fill_parent"
            android:textColor="#0000FF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/LEVEL4_TIME"
            android:layout_width="fill_parent"
            android:textAlignment="center"
            android:layout_height="fill_parent"
            android:textColor="#0000FF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textAlignment="center"
            android:text="@string/LEVEL5"
            android:textColor="#FF0000"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/LEVEL5_SCORE"
            android:layout_width="fill_parent"
            android:textAlignment="center"
            android:layout_height="fill_parent"
            android:textColor="#0000FF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/LEVEL5_TIME"
            android:layout_width="fill_parent"
            android:textAlignment="center"
            android:layout_height="fill_parent"
            android:textColor="#0000FF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>

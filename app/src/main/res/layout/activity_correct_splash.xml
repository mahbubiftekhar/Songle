<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uk.co.iftekhar.www.songle.CorrectSplash"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/YOUTUBELINK"
        android:layout_width="164dp"
        android:layout_height="74dp"
        android:layout_marginTop="8dp"
        android:text="LISTEN ON YOUTUBE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LYRICLINK"
        app:layout_constraintVertical_bias="0.154" />

    <Button
        android:id="@+id/LYRICLINK"
        android:layout_width="164dp"
        android:layout_height="74dp"
        android:layout_marginTop="24dp"
        android:text="SONG LYRICS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SAMELEVEL" />

    <Button
        android:id="@+id/SAMELEVEL"
        android:layout_width="164dp"
        android:layout_height="71dp"
        android:layout_marginTop="8dp"
        android:text="SAME LEVEL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSplash1" />

    <Button
        android:id="@+id/NEXTLEVEL"
        android:layout_width="164dp"
        android:layout_height="74dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="NEXT LEVEL"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/YOUTUBELINK"
        app:layout_constraintVertical_bias="0.549" />

    <TextView
        android:id="@+id/textViewSplash1"
        android:layout_width="246dp"
        android:layout_height="77dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="GREAT JOB!!"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/SAMELEVEL"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
